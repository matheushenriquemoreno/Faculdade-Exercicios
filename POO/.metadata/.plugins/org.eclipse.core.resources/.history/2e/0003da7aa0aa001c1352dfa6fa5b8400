package Exercicios;

import java.util.Scanner;

public class Exercicio18 {
	public static void main(String[] args) {
		Scanner entrada = new Scanner(System.in);
		
		int quantidadeLinha = 13, linha = 1, contador = 1, linhaQuebra = 1; 
		
		for (int x = 1; x <10; x++) {
			for (int y = 0 ; y < x ; y++){
				System.out.print("*" );
				}
			System.out.print("\n");
		}
			
		System.out.println ( );
		 
		
		while(linha <= quantidadeLinha) { // comparo a a quantidade de linha executadas com a quantidade maxima.
			System.out.print("*");
			if(linhaQuebra == contador) { // verifico se o contador e do tamanho da linha que vai quebrar
				System.out.println();
				linha ++; // incremento a linha
				linhaQuebra = contador + linha; // a linha que quebra recebe o valor do contador que e a quantidade de vezes que o programa executa + a quantidade de linha que e pra executar.
			}
			
			contador++;
		}
		
		int quarda = contador;
		contador = linhaQuebra;
		linhaQuebra = contador;
		
		while(linha > 0) { 
			if(linhaQuebra == contador) { 
				System.out.println();
				linha --; 
				linhaQuebra = contador - linha; 
			}
			System.out.print("*");
			contador --;
		}
		
		
		
		
	}
}
