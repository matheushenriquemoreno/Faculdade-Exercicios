package Exercicios;

import java.util.Scanner;

public class Exercicio14 {

	public static void main(String[] args) {
		Scanner entrada = new Scanner(System.in);
		 
		String desejaSair;
		
		int contadorAlunos = 0, contadorAprovados = 0, cotadorReprovados = 0, contadorExame = 0;
		double mediaClasse = 0, maiorMedia = 0, menorMedia = 0;
		
		
		do {
			System.out.println("digite o nome do aluno: ");		
			String nome = entrada.next();
			
			System.out.println("Digite sua nota: ");
			double nota1 = verificaNota(entrada.nextDouble());
					
			System.out.println("Digite sua nota: ");
			double nota2 = verificaNota(entrada.nextDouble());
			
			double mediaAritimedica = (nota1 + nota2) / 2;
			
			
			if(maiorMedia == 0 && menorMedia == 0) {
				maiorMedia = mediaAritimedica;
				menorMedia = mediaAritimedica;
			}
			if(mediaAritimedica > maiorMedia) {
				maiorMedia = mediaAritimedica;
			}
			else if(mediaAritimedica < menorMedia) { // 2 4 
				menorMedia = mediaAritimedica;
			}

			mediaClasse += mediaAritimedica;
			
			
			
			
			
			
			System.out.println("Media das duas notas lidas " + mediaAritimedica);
			
			
			if(mediaAritimedica >= 7) {
				System.out.println("Parabens você foi Aprovado!");
				contadorAprovados ++;
			}
			else if(mediaAritimedica > 3 && mediaAritimedica < 7) {
				System.out.println("você ficou de Exame!");
				contadorExame++;
			}
			else {
				System.out.println("Reprovado!");
				cotadorReprovados++;
			}
			

			
			
			
			. A média aritmética das 2 notas lidas;
			b. Uma mensagem de acordo com as regras: Até 3 (Reprovado); Entre 3 e 7 
			(Exame); de 7 para cima (Aprovado);
			c. O total de alunos;
			d. Quantidade de alunos Aprovados, Reprovados e de Exame.
			e. A Média da classe.
			f. O nome e a média dos Alunos com a maior e menor média da classe.
			
			
			
			
			
			
			
			
			
			
			

			contadorAlunos++;
			
		} while(desejaSair != "sim");
	}

	
	public static double verificaNota(double nota) {
		
		Scanner entrada = new Scanner(System.in);
		
		while (nota > 10.00 || nota < 0 ) {
			System.out.println("nota Invalida digite novamente: ");
			nota = entrada.nextDouble();
			}
		return nota;
	}
	
}
