	}
	
	
	public double vefificaNotaValida(double nota) {
		Scanner entrada = new Scanner(System.in);
		double notaValida = 0.0;
		while(nota < 0 && nota > 10) {
			System.out.print("nota invalida Digite novamente: ");
			notaValida =  entrada.nextDouble();
		}
		
		return notaValida;
	}

}
