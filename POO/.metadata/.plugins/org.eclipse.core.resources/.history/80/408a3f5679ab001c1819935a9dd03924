package Exercicios;

import java.util.Scanner;

public class Exercicio25 {

	public static void main(String[] args) {
		Scanner entrada = new Scanner(System.in);
		System.out.println("vetor 1:");
		double[] vetor1 = retornaVetorPopulado(10);
		System.out.println("vetor 2:");
		double[] vetor2 = retornaVetorPopulado(10);
		
		
		char[] vetorCaracter = new char[10];
		
		for(int i = 0; i < vetorCaracter.length; i ++) {
			System.out.println("Popule o Vetor Caracter com [-,*,/,+]: ");
			vetorCaracter[i]= entrada.next().charAt(0);
		}
		
		
		
		

	}
	
	
	public static double[] retornaVetorPopulado(int tamanho) {
		Scanner entrada = new Scanner(System.in);
	
		double [] vetor = new double [tamanho];
		
		for(int i = 0; i < vetor.length; i ++) {
			System.out.println("Popule o vetor [" + i+1 + "]:");
			vetor[i]= entrada.nextDouble();
		}
		return vetor;
	}

}
